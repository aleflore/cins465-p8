<h1>All Profiles</h1>
<% @profiles.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |profile| %>
      <div class="span4">
        <%= image_tag profile.picture_url, :width => '100%' if profile.picture.present?%>
        <h4><%= link_to profile.name, profile %></h4>
        <%= profile.description %>
      </div>
    <% end %>
  </div>
<% end %>

<br>

<%= link_to 'New Profile', new_profile_path %>
